<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <h1>My Blog</h1>
    <a href="/compose" class="button">New Post</a>
    <% posts.forEach(post => { %>
      <div class="post">
        <h2><a href="/posts/<%= encodeURIComponent(post.title) %>"><%= post.title %></a></h2>
        <p><%= post.content.substring(0, 100) %>...</p>
      </div>
    <% }) %>
  </div>
</body>
</html>
